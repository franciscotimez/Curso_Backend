<!DOCTYPE html>
<html>
  <head>
    <title>Ejs templete</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container-md">
      <h1>Productos</h1>
      <a class="btn btn-primary m-2" href="/" role="button">Add New Product</a>
      <div class="row row-cols-1 row-cols-md-2 g-6">
        <% if (listExists) { %> <% products.forEach( product=> { %>
        <div class="col-md-2">
          <div class="card">
            <img
              src="<%=product.thumbnail%>"
              class="card-img-top"
              alt="<%=product.title%>"
            />
            <div class="card-body">
              <h5 class="card-title"><%=product.title%></h5>
            </div>
            <h6 class="card-footer">Precio: $<%=product.price%></h6>
          </div>
        </div>
        <% }) %> <% } else {%>
        <h2>No Hay productos</h2>
        <% } %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

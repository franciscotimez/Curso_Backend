<div class="container-md">
  <div class="row">
    <div class="col-6">

      <h1>Ingreso Producto</h1>
      <form method="post" action="/api/productos/">
        <div class="mb-3">
          <label for="inputTitle" class="form-label">Product Title</label>
          <input
            type="text"
            class="form-control"
            id="inputTitle"
            name="title"
          />
        </div>
        <div class="mb-3">
          <label for="inputPrice" class="form-label">Price</label>
          <input
            type="text"
            class="form-control"
            id="inputPrice"
            name="price"
          />
        </div>
        <div class="mb-3">
          <label for="inputUrl" class="form-label">Image Url</label>
          <input
            type="text"
            class="form-control"
            id="inputUrl"
            name="thumbnail"
          />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      <div class="container-md">
        <h1>Productos</h1>
        <hr />
        <div class="row row-cols-1 row-cols-md-2 g-6">
          <div id="products-list"></div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container-md">
  <div class="row">
    <div class="col-6">

      <h1>Ingreso Producto</h1>
      <form id="form-product" method="post" action="/api/productos/">
        <div class="mb-3">
          <label for="inputTitle" class="form-label">Product Title</label>
          <input
            type="text"
            class="form-control"
            id="inputTitle"
            name="title"
          />
        </div>
        <div class="mb-3">
          <label for="inputPrice" class="form-label">Price</label>
          <input
            type="text"
            class="form-control"
            id="inputPrice"
            name="price"
          />
        </div>
        <div class="mb-3">
          <label for="inputUrl" class="form-label">Image Url</label>
          <input
            type="text"
            class="form-control"
            id="inputUrl"
            name="thumbnail"
          />
        </div>
        <button
          type="submit"
          form="form-product"
          class="btn btn-primary"
        >Submit</button>
      </form>
      <div id="products-list"></div>
    </div>
    <div id="chat-box" class="col-6">
      <h1>Centro de mensajes</h1>
      <form>
        <div class="mb-3">
          <label for="inputEmail" class="form-label">Ingrese su email</label>
          <input
            type="email"
            class="form-control"
            id="inputEmail"
            name="user"
          />
        </div>
      </form>
    </div>
  </div>
</div>